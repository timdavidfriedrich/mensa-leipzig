  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug skill",
      "configurations": ["Launch ASK debugger", "Launch ASK Dialog"]
    }
  ],
  "configurations": [
    {
      "name": "Launch ASK debugger",
      "request": "launch",
      "type": "node-terminal",
      "command": "node ./node_modules/ask-sdk-local-debug/dist/LocalDebuggerInvoker.js --accessToken ${ASK_ACCESS_TOKEN} --skillId ${SKILL_ID} --handlerName handler --skillEntryFile ${workspaceFolder}/skill/lambda/dist/index.js",
      "cwd": "${workspaceFolder}/skill/lambda",
      "envFile": "${workspaceFolder}/.env.launch.local",
      "preLaunchTask": "set-env"
    },
    {
      "name": "Launch ASK Dialog",
      "request": "launch",
      "type": "node-terminal",
      "command": "ask dialog",
      "cwd": "${workspaceFolder}/skill"
    }
  ]
}
